 <?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
 "-//Hibernate/Hibernate Mapping DTD//EN"
 "http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 
 
 <hibernate-mapping package="org.asal.jac.services">
     <class name="Artiste" table="ARTISTE">
         <id name="id" type="integer" column="ID">
             <generator class="native"/>
         </id>   
         
         <property name="codeArtiste" type="integer"></property>
         <property name="nom" type="string"></property>
         <set name="albums" inverse="true" lazy="false" cascade="all,delete-orphan">
             <key column="ALBUMID"/>
             <one-to-many class="Album"></one-to-many>
         </set>
      </class>
</hibernate-mapping>